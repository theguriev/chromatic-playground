{
    "name": "@react-twitter/dumb",
    "version": "1.0.0",
    "description": "A bunch of dumb function to simplify working with data",
    "keywords": [
        "dumb",
        "functions"
    ],
    "author": "Eugen Guriev <gurievcreative@gmail.com>",
    "license": "MIT",
    "main": "dist/index.js",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/theguriev/mind-maps-ext.git"
    },
    "scripts": {
        "build": "node build.js",
        "watch": "watch 'npm run build' src",
        "lint": "npx eslint --fix --ignore-path ../../.gitignore .",
        "test": "jest",
        "test:watch": "jest --watchAll"
    },
    "bugs": {
        "url": "https://github.com/theguriev/mind-maps-ext/issues"
    },
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@babel/core": "^7.15.5",
        "babel-jest": "^26.6.3",
        "copy-dir": "^1.3.0",
        "eslint-plugin-jest": "^24.3.6",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.5"
    },
    "babel": {
        "plugins": [
            [
                "module-resolver",
                {
                    "root": [
                        "./src"
                    ],
                    "alias": {
                        "@": "./src"
                    }
                }
            ],
            "dynamic-import-node",
            "add-module-exports"
        ],
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "chrome": 78,
                        "edge": 15,
                        "esmodules": false
                    }
                }
            ],
            "@babel/preset-react"
        ]
    }
}
